{
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single",
            {"allowTemplateLiterals": true}
        ],
        "semi": [
            2,
            "always"
        ],
        "no-mixed-spaces-and-tabs": [
            2,
            "smart-tabs"
        ],
        "no-console": [
            1,
            { "allow": ["warn", "error"] }
        ],
        "arrow-spacing": "error",
        "arrow-parens": ["warn", "as-needed"]
    }
}